<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<h1>Welcome to Admin page</h1>
<table class="table">
    <a href="/admin/createTrainer" class="btn btn-primary" style="margin-bottom: 20px;">Create Trainer</a>
    <thead class="table-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Username</th>
        <th scope="col">Password</th>
        <th scope="col">Role</th>
        <th scope="col">View Trainer</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% trainerAccounts.forEach(trainerAccount=> { %>
      <tr>
        <th scope="row"><%= trainerAccount.id%></th>
        <td><%= trainerAccount.userName%></td>
        <td><%= trainerAccount.password%></td>
        <td><%= trainerAccount.Role.name%></td>
        <td>
          <a href="/admin/viewTrainer/<%= trainerAccount.userId%>" class="btn btn-primary">View Details</a>
        </td>
        <td>
          <a href="/admin/deleteTrainer/<%= trainerAccount.id%>/<%= trainerAccount.userId%>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>